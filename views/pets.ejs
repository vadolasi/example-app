<!DOCTYPE html>
<html lang="pt-br">
<%- include("../components/head", { titulo: "Pets" }) %>
  <body>
    <%- include("../components/topbar") %>
    <div class="container">
      <% if (!usuario) { %>
        <div>
          <p>Antes de adotar faça seu cadastro/login na plataforma</p>
        </div>
      <% } %>
      <h3 id="titulo">Animais disponíveis para adoção</h3>
      <% if (pets.length > 0) { %>
        <div class="d-flex flex-wrap">
          <% pets.forEach(pet => { %>
            <%- include("../components/pet", { pet }) %>
          <% }) %>
        </div>
      <% } else { %>
        <span>Nenhum resultado encontrado!</span>
      <% } %>
      <nav aria-label="Navegação de página exemplo">
        <ul class="pagination">
          <li class="page-item"><a class="page-link <%= 0 == pagina - 1 ? "disabled": "" %>" href="/pets?pagina=<%= pagina - 1 %>">Anterior</a></li>
          <% for (c = 1; c <= numeroDePáginas; c++) { %>
            <li class="page-item"><a class="page-link <%= c == pagina ? "disabled": "" %>" href="/pets?pagina=<%= c %>">1</a></li>
          <% } %>
          <li class="page-item"><a class="page-link <%= c == pagina + 1 ? "disabled": "" %>" href="/pets?pagina=<%= pagina + 1 %>">Proximo</a></li>
        </ul>
      </nav>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
  </body>
</html>
